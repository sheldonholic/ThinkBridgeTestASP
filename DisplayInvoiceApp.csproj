<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AssemblyName>DisplayInvoiceApp</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="**\*.html" CopyToOutputDirectory="PreserveNewest" />
    <Content Include="**\*.js"   CopyToOutputDirectory="PreserveNewest" />
    <Content Include="**\*.css"  CopyToOutputDirectory="PreserveNewest" />
    <Content Include="**\*.sql"  CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0" />
        <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />

  </ItemGroup>

</Project>
